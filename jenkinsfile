pipeline {   
   agent {
     kubernetes {
      yaml '''
        apiVersion: v1
        kind: Pod
        metadata:
          name: mypod
          namespace: default
        spec:
          serviceAccount: jenkins-agent-sa
          containers:
          - name: build-agent
            image: careem785/careem785/vlx-cd:latest
            command: 
             - cat
            tty: true
      '''
        }
    }


stages {
      stage('deploy'){
        steps {
          container('build-agent'){
          echo "-------------------------------Deployment started---------------------------"
          sh './deploy.sh'
          echo "-------------------------------Deployment completed---------------------------"
          }
        }
      }
  }
}
